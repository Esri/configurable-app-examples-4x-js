{
  "name": "arcgis-boilerplate-ts",
  "version": "0.0.1",
  "description": "TypeScript boilerplate for building ArcGIS JS API 4.x Applications",
  "main": "dist/index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Esri/application-boilerplate-js.git"
  },
  "keywords": [
    "Esri",
    "ArcGIS",
    "TypeScript"
  ],
  "dependencies": {
